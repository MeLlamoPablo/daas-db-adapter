		"@types/pg": "^7.4.1",
		"chai": "^4.1.2",
		"mocha": "^4.0.1",
		"nyc": "^11.3.0",
		"prettier": "^1.8.2",
		"ts-node": "^3.3.0",
		"typescript": "^2.6.1"
	},
	"dependencies": {
		"@daas/model": "file:../daas-model",
